---
import FooterSocial from "./Footer/FooterSocial.astro";
import { FaXTwitter } from "react-icons/fa6";
import { FaLinkedin } from "@react-icons/all-files/fa/FaLinkedin";
import { FaInstagram } from "@react-icons/all-files/fa/FaInstagram";
import { FaGithub } from "@react-icons/all-files/fa/FaGithub";
import { FaLongArrowAltRight } from "@react-icons/all-files/fa/FaLongArrowAltRight";
import { FaSign } from "@react-icons/all-files/fa/FaSign";
import { FaPhone } from "@react-icons/all-files/fa/FaPhone";

import styles from "./Footer/Footer.module.scss";
---

<footer class={styles.footerSection}>
    <div class="container">
        <div class="row">
            <div class="col-md">
                <div class={styles.widget}>
                    <h2 class={styles.heading}>About</h2>
                    <p>
                        Casey J. Key is a software engineer with a focus on
                        finance, education, and security.
                    </p>
                    <ul class={`${styles.socialList} list-unstyled`}>
                        <li>
                            <FooterSocial
                                link="https://x.com/thecaseykey"
                                icon={FaXTwitter}
                            />
                        </li>
                        <li>
                            <FooterSocial
                                link="https://linkedin.com/in/keycasey"
                                icon={FaLinkedin}
                            />
                        </li>
                        <li>
                            <FooterSocial
                                link="https://instagram.com/caseyjgkey"
                                icon={FaInstagram}
                            />
                        </li>
                        <li>
                            <FooterSocial
                                link="https://github.com/caseyjkey"
                                icon={FaGithub}
                            />
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md">
                <div class={styles.widget}>
                    <h2 class={styles.heading}>Services</h2>
                    <ul class="list-unstyled">
                        <li>
                            <a
                                href="https://www.fiverr.com/caseykey/tutor-java-cpp-python-or-javascript"
                                target="_blank"
                            >
                                <FaLongArrowAltRight /> Tutoring
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md">
                <div class={styles.widget}>
                    <h2 class={styles.heading}>Questions?</h2>
                    <ul>
                        <li><FaSign /> <span>San Francisco, CA, USA</span></li>
                        <li>
                            <a href="tel:13072242940"
                                ><FaPhone /> +1 (307) 224-2940</a
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
